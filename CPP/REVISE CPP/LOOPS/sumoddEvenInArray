#include<iostream>
using namespace std;
void SumofArray(int arr[],int size,int &odd,int &even){
     even=0;
     odd=0;
for(int i=0;i<size;i++){
    if(arr[i]%2==0)
    even+=arr[i];
    
    else
    odd+=arr[i];
    }
}

 int main (){
    int size;
    cout<<"enter the size of array";
    cin>>size;
    int arr[size];
    cout<<"enter"<<" "<<size<<" "<<"elements in the array";
    for (int i=0;i<size;i++){
        cin>>arr[i];
    }
 
 int odd,even;
    SumofArray( arr, size, odd,even);
    cout<<"the sum of even numbers in array is "<<even<<endl;
    cout<<"the sum of odd numbers in array is "<<odd<<endl;
    } 



