#include<iostream>
using namespace std;

class Node {
public:
    int val;
    Node* next;

    Node(int val) {
        this->val = val;
        this->next = NULL;
    }
};

// Function to calculate size of linked list

int size(Node* head) {   // head is a pointer to the first node of the linked list
    Node* temp = head;     // temp is a pointer to the first node of the linked list

    int count = 0;
    while(temp != NULL) {    // loop will run until temp becomes NULL
        count++;
        temp = temp->next;  // moving temp to the next node
    }
    return count;
}


int main() {
    Node* a = new Node(10);
    Node* b = new Node(20);
    Node* c = new Node(30);
    Node* d = new Node(40);
    Node* e = new Node(50);
    a->next = b;
    b->next = c;
    c->next = d;
    d->next = e;
    e->next = NULL;

    cout << "Size of linked list: " << size(a) << endl;

    return 0;
}
